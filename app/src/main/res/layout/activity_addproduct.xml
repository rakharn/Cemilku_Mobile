<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu">

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="66dp"
        tools:ignore="MissingConstraints,UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="DATA PRODUK"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="185dp"
        android:background="@color/red"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="56dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="414dp"
        android:layout_height="550dp"
        android:background=""
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="183dp">

        <TextView
            android:layout_width="220dp"
            android:layout_height="26dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="   MASUKKAN PRODUK ANDA"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="192dp" />


        <EditText
            android:id="@+id/editproduk1"
            android:layout_width="369dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Nama Produk"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editproduk2"
            android:layout_width="369dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Harga Produk"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editproduk3"
            android:layout_width="369dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Deskripsi Produk"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editproduk4"
            android:layout_width="369dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Jenis Produk"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editproduk5"
            android:layout_width="369dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Stock Produk"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_1"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:width="150dp"
        android:height="55dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinssemibold"
        android:text="SIMPAN PRODUK"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp" />


</androidx.constraintlayout.widget.ConstraintLayout>